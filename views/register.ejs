<head>
  <title>Home Page</title>
  <link href="/assets/styles.css" rel = "stylesheet" type="text/css" />
</head>

<div class="row">
    <div class="col-md-12">
        <% if ( typeof(message) !="undefined" ) { %>
          <h2 style = "text-align: center; color:red;"><%= message %></h2>
        <% } %>
        <form action="/register" method="POST">
          <div class="form-group">
            <input style = "margin-left: 15%; margin-top: 5%;" type="text" name="username" value="" placeholder="Username" id="username" class="form-control" required/>
          </div>
          <div class="form-group">
            <input style = "margin-left: 15%; margin-top: 1%;" type="password" name="password" value="" placeholder="password" id="password" class="form-control" required/>
          </div>
          <div class="form-group">
            <button style="margin-left: 35%; margin-top:5%;" type="submit" class="btn btn-primary">Register</button>
          </div>
        </form>
        <a href="/home">
          <button style = "margin-left: 35%; background-color: red !important;">Home</button>
        </a>
    </div>
    
    
</div>